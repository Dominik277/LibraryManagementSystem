<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".ModifyActivity.ModifyMrezeIProtokoliActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ovdje možete ažurirati zapise!"
        android:textSize="24dp"
        android:layout_margin="30dp"
        android:textColor="#000"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/modify_nameMrezeIProtokoli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Unesite novo ime knjige"/>
    <EditText
        android:id="@+id/modify_authorMrezeIProtokoli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Unesite novog pisca"/>
    <EditText
        android:id="@+id/modify_pagesMrezeIProtokoli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Unesite novi broj stranica"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <Button
            android:id="@+id/gumbUpdateMrezeIProtokoli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:text="Update"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/gumbDeleteMrezeIProtokoli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:text="Delete"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Želite li ovu knjigu staviti na vašu listu želja?"
            android:textSize="24dp"
            android:textColor="#000"/>
        <CheckBox
            android:id="@+id/favoriteMrezeIProtokoli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onFavoriteClickMrezeIProtokoli"/>
    </LinearLayout>

</LinearLayout>