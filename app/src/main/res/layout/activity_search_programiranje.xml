<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp"
    tools:context=".SearchActivity.SearchProgramiranjeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ovdje možete pronaći željenu knjigu!"
        android:textSize="26dp"
        android:textColor="#000"/>
    <EditText
        android:id="@+id/editTextSearchProgramiranje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Koju knjigu tražite?"/>
    <ListView
        android:id="@+id/listViewSearchProgramiranje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/gumbPronadiKnjigu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Pronađi"
        android:textSize="20dp"/>

</LinearLayout>