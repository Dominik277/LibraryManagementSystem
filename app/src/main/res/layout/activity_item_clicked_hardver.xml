<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp"
    tools:context=".ItemClickActivity.ItemClickedHardverActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Želite li posuditi knjigu"
        android:textSize="26dp"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/hardverKnjiga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Koju je napisao pisac"
        android:textSize="26dp"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/hardverPisac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Ako želite molimo Vas upišite svoje podatke."
        android:textSize="22dp"
        android:textColor="#000"/>
    <EditText
        android:id="@+id/editTextPosudbaImeHardver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Ovdje upišite svoje ime..."/>
    <EditText
        android:id="@+id/editTextPosudbaPrezimeHardver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Ovdje upišite svoje prezime..."/>
    <EditText
        android:id="@+id/editTextPosudbaEmailHardver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Ovdje upišite svoj email..."/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:text="Posudi"
        android:textSize="24dp"/>

</LinearLayout>